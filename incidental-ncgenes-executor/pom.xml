<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.renci.binning.workflows</groupId>
    <artifactId>incidental-ncgenes</artifactId>
    <version>0.0.5</version>
  </parent>
  <name>Binning :: Workflow :: Incidental NCGenes :: Executor</name>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.renci.binning.workflows.incidental-ncgenes</groupId>
  <artifactId>incidental-ncgenes-executor</artifactId>
  <version>0.0.5</version>
  <packaging>bundle</packaging>
  <dependencies>
    <dependency>
      <groupId>org.renci.binning.workflows.incidental-ncgenes</groupId>
      <artifactId>incidental-ncgenes-commons</artifactId>
    </dependency>                  
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
	<extensions>true</extensions>
        <configuration>
          <instructions>
            <Private-Package>org.renci.binning.incidental.ncgenes.executor.*</Private-Package>
            <Export-Package>org.renci.binning.incidental.ncgenes.executor*</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>  
</project>
